# Gem source
source "https://rubygems.org"

# Core jekyll gem
gem "jekyll", "~> 3.7.2"

# Bundling deps to work locally
gem "bundler", "~> 1.14"

# Site boilerplate theme
gem "alembic-jekyll-theme", "~> 3.0.1"

# Plugin gems
group :jekyll_plugins do
  gem "jekyll-remote-theme", "~> 0.2"
  gem "jekyll-default-layout", "~> 0.1"
  gem "jekyll-redirect-from", "~> 0.12"
  gem "jekyll-sitemap", "~> 0.13"
  gem "jekyll-feed", "~> 0.6"
  gem "jekyll-seo-tag", "~> 2.3"
end
